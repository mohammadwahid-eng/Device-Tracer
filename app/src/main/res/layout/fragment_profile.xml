<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <LinearLayout
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/profile_name"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:drawableLeft="@drawable/ic_barcode"
                android:drawablePadding="10dp"
                android:id="@+id/profile_imei"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:text="@string/label_imei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight=".3"
            android:paddingLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <com.github.abdularis.civ.CircleImageView
                android:id="@+id/profile_avatar"
                android:src="@drawable/ic_avatar"
                android:scaleType="fitXY"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:id="@+id/profile_avatar_change"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:text="Change"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/updateForm"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/label_name"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/profile_edit_name"
                android:inputType="textPersonName"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="@string/label_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/profile_edit_email"
                android:inputType="textEmailAddress"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="@string/label_mobile"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/profile_edit_mobile"
                android:inputType="phone"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="@string/label_imei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/profile_edit_imei"
                android:focusable="false"
                android:inputType="number"
                style="@style/AppEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/profile_updateBtn"
            android:textColor="@color/colorWhite"
            style="@style/AppButton"
            android:background="@drawable/btn_primary"
            android:text="@string/label_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>