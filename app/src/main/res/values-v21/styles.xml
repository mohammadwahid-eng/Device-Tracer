<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppEditText">
        <item name="android:lines">1</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="AppButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppSwitch" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppSearchViewNav" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>
</resources>