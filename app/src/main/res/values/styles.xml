<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/avenir</item>
    </style>

    <style name="AppEditTextWrapper" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#ffffff</item>
        <item name="boxStrokeWidth">.5dp</item>
        <item name="boxStrokeWidthFocused">.5dp</item>
    </style>

    <style name="AppEditText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/cursorprimary</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppSwitch" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppSearchViewNav" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/colorLight</item>
        <item name="android:textColorHint">@color/colorLight</item>
        <item name="android:tint">@color/colorLight</item>
        <item name="android:textCursorDrawable">@drawable/cursorsecondary</item>
    </style>

</resources>
